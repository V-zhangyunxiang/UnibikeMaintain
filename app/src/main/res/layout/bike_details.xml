<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ebebeb"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#48D1CC"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/string_bikeDetails"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        >

        <TextView
            android:id="@+id/pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/string_password"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pwd_tv"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            >

            <TextView
                android:id="@+id/pwd_tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cccccc"
                android:padding="10dp"
                android:text="0"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pwd_tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#cccccc"
                android:padding="10dp"
                android:text="0"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pwd_tv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#cccccc"
                android:padding="10dp"
                android:text="0"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pwd_tv_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#cccccc"
                android:padding="10dp"
                android:text="0"
                android:textSize="25sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/change_bike_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:text="改变车状态"
        android:textColor="#48D1CC"
        />

    <Button
        android:id="@+id/control_bike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:text="操作车辆"
        android:textColor="#48D1CC"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:padding="15dp"
        >

        <TextView
            android:id="@+id/number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单车编号 :"
            />

        <TextView
            android:id="@+id/value_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/number_tv"
            android:text=" 0000000"
            />

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/number_tv"
            android:layout_marginTop="10dp"
            android:text="当前状态 :"
            />

        <TextView
            android:id="@+id/value_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/status_tv"
            android:layout_below="@id/value_number_tv"
            android:layout_toRightOf="@id/status_tv"
            android:text=" 无状态"
            />

        <TextView
            android:id="@+id/battery_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_tv"
            android:layout_marginTop="10dp"
            android:text="电量 :"
            />

        <TextView
            android:id="@+id/value_battery_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/battery_tv"
            android:layout_below="@id/value_status_tv"
            android:layout_toRightOf="@id/battery_tv"
            android:text=" 0"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/recent_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近用户"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recent_user"
            android:layout_marginTop="10dp"
            android:text="订单编号 :"
            />

        <TextView
            android:id="@+id/value_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/order_number"
            android:layout_toRightOf="@id/order_number"
            android:text=" 无"
            />

        <LinearLayout
            android:id="@+id/lin_detail_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_number"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户姓名 :"
                />

            <TextView
                android:id="@+id/value_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 无"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号 :"
                />

            <TextView
                android:id="@+id/value_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text=" 无"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_detail_one"
            android:text="开始时间 :"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/value_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/start_time"
            android:text=" 无"
            android:layout_alignTop="@id/start_time"
            />
        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_time"
            android:text="结束时间 :"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/value_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/end_time"
            android:text=" 无"
            android:layout_alignTop="@id/end_time"
            />
        <TextView
            android:id="@+id/ride_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/end_time"
            android:text="骑行时间(分) :"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/value_ride_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ride_time"
            android:text=" 0"
            android:layout_alignTop="@id/ride_time"
            />
        <TextView
            android:id="@+id/ride_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/value_ride_time"
            android:text="骑行费用(元) :"
            android:layout_alignTop="@id/value_ride_time"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/value_ride_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ride_cost"
            android:text=" 0.00"
            android:layout_alignTop="@id/ride_cost"
            />

    </RelativeLayout>

</LinearLayout>